PORT=5000
# Admin auth for write operations
ADMIN_PASSWORD=
NODE_ENV=production
JWT_SECRET=your_jwt_secret_key_here

# Auto Rotation - Enable automatic rotation advancement
# Set to 'true' to automatically create upcoming rotations for interns
# Set to 'false' to disable auto-rotation (manual management only)
AUTO_ROTATION=true

# Database Configuration
# For PostgreSQL (production on Supabase/Railway):
# Format: postgresql://user:password@host:port/database
# 
# IMPORTANT: If password contains special characters, they MUST be URL-encoded:
#   @ = %40
#   : = %3A
#   # = %23
#   % = %25
#   / = %2F
#   ? = %3F
#   & = %26
#   = = %3D
#
# Example with encoded password "my#pass@word":
# DATABASE_URL=postgresql://postgres:my%23pass%40word@db.supabase.co:5432/postgres
#
# For Supabase: Get from Project Settings > Database > Connection string
# For Railway: Get from PostgreSQL service variables
# For local development with SQLite: Leave DATABASE_URL empty and set DB_TYPE=sqlite
DATABASE_URL=postgresql://postgres:YOUR_PASSWORD@YOUR_HOST:5432/postgres
DB_TYPE=postgres

# For SQLite (local development only): 
# DATABASE_URL=
# DB_TYPE=sqlite
# DB_PATH=./database/spin.db

CORS_ORIGIN=https://spin-interns.vercel.app
CLOUD_BACKUP_PROVIDER=googledrive
AUTO_RESTORE_ENABLED=true
BACKUP_SCHEDULE=daily
BACKUP_TIME=02:00
BACKUP_RETENTION_COUNT=10

# OneDrive Configuration (if using OneDrive)
ONEDRIVE_CLIENT_ID=
ONEDRIVE_CLIENT_SECRET=
ONEDRIVE_TENANT_ID=common

# Google Drive Configuration (if using Google Drive)
GOOGLE_DRIVE_CLIENT_ID=
GOOGLE_DRIVE_CLIENT_SECRET=
GOOGLE_DRIVE_REDIRECT_URI=http://localhost:5000/api/auth/google/callback
