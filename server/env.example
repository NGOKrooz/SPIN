PORT=5000
# Admin auth for write operations
ADMIN_PASSWORD=
NODE_ENV=development
JWT_SECRET=your_jwt_secret_key_here

# Auto Rotation - Enable automatic rotation advancement
# Set to 'true' to automatically create upcoming rotations for interns
# Set to 'false' to disable auto-rotation (manual management only)
AUTO_ROTATION=true

# Database Configuration
# IMPORTANT: For Vercel and Render deployments, you MUST use PostgreSQL
# SQLite files get wiped on each deployment (stateless filesystem)
#
# PostgreSQL Options:
# 1. Render: Uncomment database section in render.yaml (auto-provides DATABASE_URL)
# 2. Vercel: Use external service (Supabase, Neon, Railway, etc.)
#    - Get connection string from your PostgreSQL provider
#    - Add as DATABASE_URL environment variable in Vercel Dashboard
#
# Format: postgresql://username:password@host:port/database?sslmode=require
DATABASE_URL=
#
# For local development with SQLite (optional):
# DB_TYPE=sqlite
# DB_PATH=./database/spin.db

CORS_ORIGIN=http://localhost:3000

# Cloud Backup Configuration
CLOUD_BACKUP_ENABLED=false
CLOUD_BACKUP_PROVIDER=googledrive
AUTO_RESTORE_ENABLED=true
BACKUP_SCHEDULE=daily
BACKUP_TIME=02:00
BACKUP_RETENTION_COUNT=10

# OneDrive Configuration (if using OneDrive)
ONEDRIVE_CLIENT_ID=
ONEDRIVE_CLIENT_SECRET=
ONEDRIVE_TENANT_ID=common

# Google Drive Configuration (if using Google Drive)
GOOGLE_DRIVE_CLIENT_ID=
GOOGLE_DRIVE_CLIENT_SECRET=
GOOGLE_DRIVE_REDIRECT_URI=http://localhost:5000/api/auth/google/callback
